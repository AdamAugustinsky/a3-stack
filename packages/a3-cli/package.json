{
  "name": "a3-cli",
  "version": "0.1.0",
  "description": "A3 Stack CLI - Create modern full-stack apps with SvelteKit, Better Auth, and Kysely",
  "type": "module",
  "bin": {
    "a3": "./dist/index.js"
  },
  "main": "./dist/lib/index.js",
  "exports": {
    ".": "./dist/lib/index.js",
    "./commands": "./dist/commands/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.0",
    "giget": "^2.0.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "a3-stack",
    "sveltekit",
    "better-auth",
    "kysely",
    "cli",
    "scaffold"
  ],
  "author": "Adam Augustinsky",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdamAugustinsky/a3-stack"
  }
}
