{
	"name": "{{projectName}}",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:start": "docker compose up",
		"db:migrate": "./scripts/apply-migration.sh apply",
		"db:migrate:status": "./scripts/apply-migration.sh status",
		"db:migrate:diff": "./scripts/generate-migration.sh",
		"db:seed": "bun run scripts/seed-todos.ts",
		"db:seed:todos": "bun run scripts/seed-todos.ts",
		"gentypes": "kysely-codegen --include-pattern=\"public.*\" --dialect=postgres --out-file=src/lib/server/db/db.types.ts",
		"db:setup": "bun run db:migrate && bun run gentypes"
	},
